<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="450.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.RegistroController">
    <stylesheets>
        <URL value="@/Css/Estilos.css" />
    </stylesheets>
   <children>
      <HBox id="fondoTitulo" alignment="CENTER" prefHeight="70.0" prefWidth="450.0" stylesheets="@../Css/Estilos.css">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Registro">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="141.0" prefHeight="395.0" prefWidth="350.0" spacing="15.0" stylesheets="@../Css/Estilos.css">
         <children>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="350.0" spacing="58.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre:">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtNombre" focusTraversable="false" prefHeight="25.0" prefWidth="170.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="350.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Identificación:">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtIdentficacion" focusTraversable="false" prefHeight="25.0" prefWidth="170.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="350.0" spacing="54.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Telefono:">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtTelefono" focusTraversable="false" prefHeight="25.0" prefWidth="170.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="350.0" spacing="67.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Correo:">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtGmail" focusTraversable="false" prefHeight="25.0" prefWidth="170.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="350.0" spacing="34.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña:">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtClave" focusTraversable="false" prefHeight="25.0" prefWidth="170.0" />
               </children>
            </HBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="70.0" prefWidth="350.0" spacing="30.0">
                     <children>
                        <Button fx:id="btn_cancelar" focusTraversable="false" mnemonicParsing="false" onAction="#eventAction" styleClass="botonesLogin" text="Cancelar">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                        <Button fx:id="btn_registrar" focusTraversable="false" mnemonicParsing="false" onAction="#eventAction" styleClass="botonesLogin" text="Registrar">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets top="40.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
